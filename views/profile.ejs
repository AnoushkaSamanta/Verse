<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-screen bg-zinc-900 text-white p-10">
        <div class="w-full flex justify-end">
        <a href="/logout" class="bg-red-500 px-3 py-2 rounded-lg ">Logout</a>
    </div>
    <div class="flex gap-3 mt-3">
        <div class="w-10 h-10  rounded-md overflow-hidden">
            <img  class="w-fill h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
        </div>
        <h1 class="text-3xl mb-5 ">Hello, <%=user.name %></h1>
    </div>
    
        <h5 class="text-xl mb-4">You can create a new post</h5>
        <form method="post" action="/post" class="flex flex-col gap-3 mb-10">
            <textarea placeholder="What's on your mind?"  name="content" class="w-1/3 p-3 resize-none bg-zinc-800 rounded-lg border-none"></textarea>
            <input type="submit" value="Create New Post" class=" px-4 py-3 bg-sky-600 w-[200px] rounded-lg">
        </form>
        <div class="posts">
            <h3 class="text-2xl text-zinc-400 mb-4">Your Posts.</h3>
            <div class="postcontainer flex flex-row flex-wrap gap-3">
                <% user.posts.reverse().forEach(function(post) { %>
                    <div class="post w-1/3 p-3 bg-zinc-800 rounded-lg">
                        <h4 class="text-sky-600">@<%=user.username%></h4>
                        <p><%=post.content%></p>
                        <p class="mt-2"><%=post.likes.length%> Likes</p>
                        <div class="buttons mt-3 flex flex-row justify-between">
                            <a href="/like/<%=post._id%>" class="text-sky-600"><%= (post.likes.indexOf(user._id)==-1)?"Like":"Unlike"%></a>
                            <a href="/edit/<%=post._id%>" class="text-zinc-600">Edit</a>
                        </div>
                    </div>
                <% }) %>


            </div>
        </div>
    </div>
</body>
</html>